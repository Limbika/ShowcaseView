<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ShowcaseButton">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="ShowcaseButton.Tick_Follow" parent="@style/ShowcaseButton">
        <item name="android:background">@drawable/button_tick_follow</item>
        <item name="android:src">@drawable/ic_tick</item>
    </style>

    <style name="ShowcaseButton.Finalize_X" parent="@style/ShowcaseButton">
        <item name="android:background">@drawable/button_finalize_x</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail.Light</item>
        <item name="sv_backgroundColor">@color/background</item>
        <item name="sv_buttonText">@android:string/ok</item>
    </style>

    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
        <item name="sv_backgroundColor">@color/background</item>
        <item name="sv_buttonText">@android:string/ok</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#333333</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:shadowRadius">0</item>
    </style>

</resources>